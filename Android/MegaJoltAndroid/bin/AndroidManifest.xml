        <activity android:name="com.estes.megajoltandroid.GlobalSettingsPreferencesActivity" android:launchMode="singleTop">
        </activity>
        <activity android:name="com.estes.megajoltandroid.guages.GaugesPreferencesActivity" android:launchMode="singleTop">
        </activity>
         <activity android:name="com.estes.megajoltandroid.ignition.IgnitionSettingsPreferencesActivity" android:launchMode="singleTop">
        </activity>
        <activity
            android:name="com.estes.megajoltandroid.guages.GuagesActivity"
            android:label="@string/title_activity_guages" 
            android:launchMode="singleTop">
        </activity>
        <activity
            android:name="com.estes.megajoltandroid.ignition.IgnitionMapActivity"
            android:label="@string/app_name" 
            android:launchMode="singleTop">
